<form action="/hogwarts/<%= @student.id %>" method="post">

  <label for="first-name">First Name: </label>
  <input id="first-name" type="text" name="first_name" value="<%= @student.first_name%>">
  <br>
  <br>

  <label for="last-name">Last Name: </label>
  <input id="last-name" type="text" name="last_name" value="<%= @student.last_name%>">
  <br>
  <br>

  <label for="house_select">Select House:</label>
  <select id="house_select" name="house_id">
    <% @houses.each do |house| %>
      <option value="<%= house.name.capitalize %>" <%= 'selected' if @student.house_id == house_id %>><%= house.name.capitalize %></option>
    <% end %>
  </select>
  <br>
  <br>

  <label for="age">Age: </label>
  <input id="age" type="text" name="age" value="<%= @student.age %>">
  <br>
  <br>

  <input type="submit" value="Submit Student">


</form>
