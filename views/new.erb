<form action="/hogwarts" method="post">

<label for="first-name">First Name: </label>
<input id="first-name" type="text" name="first_name">
<br>
<br>

<label for="last-name">Last Name: </label>
<input id="last-name" type="text" name="last_name">
<br>
<br>

<label for="house-select">Select House:</label>
<select name="house_id" id="house-select">

  <% @houses.each do |house| %>
    <option value="<%= house.name.capitalize %>"><%= house.name.capitalize %></option>
  <% end %>
  <!-- <option value="1">Gryffindor</option>
  <option value="2">Hufflepuff</option>
  <option value="3">Ravenclaw</option>
  <option value="4">Slytherin</option> -->
</select>
<br>
<br>

<label for="age">Age: </label>
<input id="age" type="text" name="age">
<br>
<br>

<input type="submit" value="Submit Student">

</form>
